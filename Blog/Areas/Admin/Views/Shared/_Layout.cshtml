<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/fontawesome.min.css">
    <link href="~/Areas/Admin/assets/css/fontawesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/fullcalendar.min.css">


    <link href="~/Areas/Admin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/css/tooplate.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.css">

    <style>
        #test {
            margin-top: 25px;
            animation: fadein 2s;
            -moz-animation: fadein 2s; /* Firefox */
            -webkit-animation: fadein 2s; /* Safari and Chrome */
            -o-animation: fadein 2s; /* Opera */
        }

        @@keyframes fadein {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@-moz-keyframes fadein { /* Firefox */
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@-webkit-keyframes fadein { /* Safari and Chrome */
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@-o-keyframes fadein { /* Opera */
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>
</head>

<body id="reportsPage">
    <div id="home">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-xl navbar-light bg-light">
                        <a class="navbar-brand" href="@Url.Action("Index","Dashboard")">
                            <i class="fas fa-3x fa-tachometer-alt tm-site-icon"></i>
                            <h1 class="tm-site-title mb-0">Admin Panel</h1>
                        </a>
                        <button class="navbar-toggler ml-auto mr-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mx-auto">
                                <li class="nav-item">
                                    <a class="nav-link" id="dashboardA" href="@Url.Action("Index","Dashboard")">
                                        Dashboard
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" id="articlesA" href="@Url.Action("Index","AdminArticle")">Articles</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" id="usersA" href="@Url.Action("Index","User")">Users</a>
                                </li>

                                @Html.Action("ReportsPartial", "Reports")


                                <li class="nav-item">
                                    <a class="nav-link " id="mainpageA" href="@Url.Action("Index","Home",new { area = "" })">
                                        <i class="fas fa-external-link-alt"></i>
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                            </ul>
                            @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex" href="javascript:document.getElementById('logoutForm').submit()">
                                            <i class="far fa-user mr-2 tm-logout-icon"></i>
                                            <span>Logoff</span>
                                        </a>
                                    </li>
                                </ul>

                            }

                        </div>
                    </nav>
                </div>
            </div>
            <div id="test">
                @RenderBody()
            </div>


        </div>
    </div>

    <script src="~/Areas/Admin/assets/js/jquery-3.3.1.min.js"></script>
    <script src="~/Areas/Admin/assets/js/moment.min.js"></script>

    <script src="~/Areas/Admin/assets/js/utils.js"></script>
    <script src="~/Areas/Admin/assets/js/Chart.min.js"></script>
    <script src="~/Areas/Admin/assets/js/fullcalendar.min.js"></script>
    <script src="~/Areas/Admin/assets/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/assets/js/tooplate-scripts.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.js"></script>
    <script>

        $(function () {

            drawCalendar(); // Calendar

            $(window).resize(function () {

                reloadPage();
            });
        })
    </script>
    <script>

        var activeLink = "@ViewBag.Title";
        if (activeLink)
        {
            switch (activeLink) {
                case "Dashboard":
                    $("#dashboardA").addClass("active");
                    break;
                case "Articles":
                    $("#articlesA").addClass("active");
                    break;
                case "Reports":
                    $("#reportsA").addClass("active");
                    break;
                case "Users":
                    $("#usersA").addClass("active");
                    break;
            }
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>

